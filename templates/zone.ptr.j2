; generated by Ansible
; zone file for domain {{item.network}} ({{item.network | ipaddr('revdns')}})
$TTL	86400
@	IN	SOA	localhost. root.localhost. (
			      {{item.serial}}   ; serial
			 604800   ; refresh
			  86400   ; retry
			2419200   ; expire
			  86400 ) ;  negative cache TTL
;
{% for host in item.nameservers %}
@	in	NS	{{host}}.
{% endfor %}
;
{% for host in item.hosts %}
{% if 'addr' in host %}
{{ host.addr.split('.')[-1] }}	IN	PTR	{{ host.name }}.{{ item.name }}.
{% endif %}
{% endfor %}
