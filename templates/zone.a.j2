; generated by Ansible
; zone file for domain {{item.name}}
$TTL	86400
@	IN	SOA	localhost. root.localhost. (
			      {{item.serial}}   ; serial
			 604800   ; refresh
			  86400   ; retry
			2419200   ; expire
			  86400 ) ;  negative cache TTL
;
{% for host in item.nameservers %}
@	in	NS	{{host}}.
{% endfor %}
;
{% for host in item.hosts %}
{% if 'addr' in host %}
{{ host.name }}	IN	A	{{ host.addr }}
{% endif %}
{% for cname in host.cnames %}
{{ cname }}	IN	CNAME	{{ host.name }}
{% endfor %}
{% endfor %}
